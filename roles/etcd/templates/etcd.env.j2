ETCD_ENABLE_V2="true"
ETCD_DATA_DIR="/opt/ex_data/etcd/data"
ETCD_LISTEN_CLIENT_URLS="http://0.0.0.0:2379"
ETCD_ADVERTISE_CLIENT_URLS="http://{{ inventory_hostname }}:2379"
